{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "directoryPath": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256,
      "description": "The path to the directory to read"
    },
    "fileNamePattern": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256,
      "description": "Regular expression to filter files"
    }
  },
  "required": [
    "directoryPath"
  ]
}
