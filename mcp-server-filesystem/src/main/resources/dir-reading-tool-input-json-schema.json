{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256,
      "description": "Path to the directory"
    },
    "fileExtensionFilter": {
      "type": "string",
      "minLength": 2,
      "maxLength": 256,
      "description": "Only return file names with specified extension"
    }
  },
  "required": [
    "path"
  ]
}
